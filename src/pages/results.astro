---
import { results } from '../constants/results';
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
---

<Layout>
  <div class="flex flex-col gap-6 py-4">
    <ul class="text-sm">
      {
        results.map((result) => (
          <li class="flex flex-col">
            <section class="bg-dark-light flex flex-col gap-2 p-4 rounded-lg">
              <div class="flex flex-col">
                <h2 class="font-semibold text-base">{result.name}</h2>
                <p class="text-gray text-xs">{result.date}</p>
              </div>
              <ul>
                {
                  result.matches.map((match) => (
                    <li class="flex justify-between gap-2 p-2 border-b border-white/10">
                      <div class="flex flex-1 justify-between items-center">
                        <div>
                          <h3>{match.home}</h3>
                          <ul>
                            {
                              match.homeScorers.map((scorer) => (
                                <li class="text-gray text-xs">
                                  {scorer}
                                </li>
                              ))
                            }
                          </ul>
                        </div>
                        <p class="text-xl font-bold">{match.homeScorers.length}</p>
                      </div>
                      <div class="flex flex-1 justify-center items-center">
                        <p class="text-xl">vs</p>
                      </div>
                      <div class="flex flex-1 justify-between items-center">
                        <p class="text-xl font-bold">{match.awayScorers.length}</p>
                        <div>
                          <h3>{match.away}</h3>
                          <ul>
                            {
                              match.awayScorers.map((scorer) => (
                                <li class="text-gray text-xs">
                                  {scorer}
                                </li>
                              ))
                            }
                          </ul>
                        </div>
                      </div>
                    </li>
                  ))
                }
              </ul>
            </section>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
